# Environment Variables Template for KDU MA Attendance Hub
# Copy this file to .env and fill in the actual values

# ======================
# DATABASE CONFIGURATION
# ======================
# MongoDB Connection String
# For Production: Use MongoDB Atlas connection string
# For Development: Use local MongoDB or Atlas
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/kdu-attendance?retryWrites=true&w=majority

# ======================
# SERVER CONFIGURATION  
# ======================
# Port for the backend server
PORT=5000

# Node Environment (development, production, test)
NODE_ENV=development

# Frontend URL for CORS (update in production)
FRONTEND_URL=http://localhost:3000

# ======================
# SECURITY (Optional)
# ======================
# JWT Secret Key (for authentication if implemented)
# JWT_SECRET="your-super-secret-jwt-key-here"

# ======================
# API CONFIGURATION (Optional)
# ======================
# API Rate Limiting
# API_RATE_LIMIT=100

# Cors Origins (comma separated)
# CORS_ORIGINS="http://localhost:3000,http://localhost:3001"