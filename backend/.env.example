# Environment Variables Template for KDU MA Attendance Hub
# Copy this file to .env and fill in the actual values

# ======================
# DATABASE CONFIGURATION
# ======================
# MongoDB Connection String
# Replace with your MongoDB Atlas connection string or local MongoDB URL
MONGO_URI="mongodb+srv://username:password@cluster.mongodb.net/kdu_auth_demo?retryWrites=true&w=majority&appName=cluster-name"

# ======================
# SERVER CONFIGURATION  
# ======================
# Port for the backend server
PORT=5000

# Node Environment (development, production, test)
NODE_ENV=development

# ======================
# SECURITY (Optional)
# ======================
# JWT Secret Key (for authentication if implemented)
# JWT_SECRET="your-super-secret-jwt-key-here"

# ======================
# API CONFIGURATION (Optional)
# ======================
# API Rate Limiting
# API_RATE_LIMIT=100

# Cors Origins (comma separated)
# CORS_ORIGINS="http://localhost:3000,http://localhost:3001"